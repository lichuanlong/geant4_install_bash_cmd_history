# Geant4 install bash history in Ubuntu 18.04 LTS

cd
sudo apt update 
sudo apt upgrade
sudo apt install build-essential synaptic cmake cmake-curses-gui qt5-default libxmu-dev libexpat1-dev

mkdir geant4
cd geant4/
# unpack tarball here

mkdir geant4.10.04.p01-build
cd geant4.10.04.p01-build/
ccmake ../geant4.10.04.p01
  "c"
  "e"
  multithreading ON
  qt ON
  opengl x11 ON
  install data ON
  "c"
  "c"
  "g"
make -j4
sudo make install
